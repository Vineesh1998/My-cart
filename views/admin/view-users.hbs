<section style="padding: 1em;">
    <div class="container">
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    {{#each allUsers}}
    <tr>
      <th scope="row">1</th>
      <td>{{this._id}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Remove</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>